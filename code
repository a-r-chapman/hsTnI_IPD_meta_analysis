        geom_text(size = 7, hjust=0, vjust=0) + theme_bw()  + 
        geom_hline(yintercept=1.75,linetype = "longdash")+
        geom_hline(yintercept=8.75,linetype = "longdash")+
        geom_hline(yintercept=17.75,linetype = "longdash")+
